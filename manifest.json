{
  "manifest_version": 3,
  "name": "PureFeed - 极简推文过滤",
  "version": "1.1.0",
  "description": "一键开启纯净模式，过滤X/Twitter低价值短内容。支持媒体类型、语言和互动量筛选，让时间线回归本质。",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}